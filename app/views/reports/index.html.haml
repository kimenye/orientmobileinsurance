.row
  .large-8.columns.large-centered
    %form{:method => "POST", :action => '/download_data.xls'}
      %label{:for => "start_date"} From
      %input{:type => "text", :name => "start_date", :id => "start_date", :class => "datepicker"}
      %label{:for => "end_date"} To
      %input{:type => "text", :name => "end_date", :id => "end_date", :class => "datepicker"}
      %input.button.small{:type => "submit"}

:javascript
  $(function(){

    $(function() {
      $( ".datepicker" ).datepicker({ dateFormat: 'dd/mm/yy' });
    });
  })