#home-page{"data-role" => "page", "data-theme" => "b"}
  %section{"data-role" => "content", :role => "main"}
    %h1.logo
      %img.logo.smaller{:alt => "Kenya Orient", :src => "../assets/koil_logo.png"}
    %p
      %span Vendor:
      %span
        = @device_info['vendor']
    %p
      %span Model:
      %span
        = @device_info['model']
    %p
      %span OS:
      %span
        = @device_info['osName']
    %p
      %span Year of purchase:
      %span
        = @year_of_purchase
    - if (@is_insurable)
      %p Insurance value:
      %p 1-year premium:
      %p 3 monthly installments of:
      %a{"href" => "#", "data-role" => "button", "data-inline" => "true", "data-mini" => "true"} Cancel
      %a{"href" => "#", "data-role" => "button", "data-inline" => "true", "data-theme" => "b", "data-mini" => "true"} Continue
    - else
      %p Unfortunately we are not able to provide you with an Orient Mobile policy for your device at this time. Thank you for considering us.