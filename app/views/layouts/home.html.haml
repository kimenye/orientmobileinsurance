!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Kenya Orient Mobile Insurance"
      %meta{:content => content_for?(:description) ? yield(:description) : "Kenya Orient Mobile Insurance", :name => "description"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        =  stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato:300,400,700'
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    #container.container
      / %header
      /   .row
      /     .large-3.columns
      /       %a.logo
      /     .large-9.columns
      #main{:role => "main"}
        = yield
      / %footer
      /   = render 'layouts/footer'
    / ! end of #container