.row
  .large-12.columns
    %h2.subheader
      Orient Mobile Analytics
.row
  .large-6.columns
    %h3.subheader
      Overview
    .overview.grid
      %table
        %thead
          %tr
            %th
              Enquiries
            %th
              Quotes
            %th
              Customers
        %tbody
          %tr.headline
            %td
              %h1.subheader
                = @enquiries.count
            %td
              %h1.subheader
                = @quotes.count
            %td
              %h1.subheader
                = @policies.count
  .large-6.columns
    %h3.subheader
      Revenue To Date
    .overview.grid
      %table
        %thead
          %tr
            %th
              Premiums Collected
            %th
              Insured Value
            %th
              Premiums Owing
        %tbody
          %tr.headline
            %td
              %h1.subheader
                = @total
            %td
              %h1.subheader
                = @insured_value
            %td
              %h1.subheader
                = @pending
.row
  .large-12.columns
    %h3.subheader
      Conversions    
    #chart
    = render_chart @chart, 'chart'
.row
  .large-12.columns
    %h3.subheader
      Policies vs Claims
    #piechart
    = render_chart @piechart, 'piechart'